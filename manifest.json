{
  "manifest_version": 2,
  "name": "Lessit",
  "version": "1.0.8",
  "description": "A extension to reduce reddit use.",
  "icons": {
    "16":"icons/lessit-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["lessit.js"],
      "css": ["lessit.css"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/lessit-logo.png",
    "default_title": "Lessit",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{db518b63-6a6e-45b3-8bea-9ac9cc82c891}"
    }
  }
}
