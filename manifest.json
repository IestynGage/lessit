{
  "manifest_version": 2,
  "name": "Lessit",
  "version": "1.0.1",
  "description": "A extension to reduce reddit use.",
  "icons": {
    "16":"icons/lessit-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["lessit.js"],
      "css": ["lessit.css"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
